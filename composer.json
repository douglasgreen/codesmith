{
    "name": "douglasgreen/codesmith",
    "description": "A file to read a simple universal syntax and write other languages",
    "type": "project",
    "keywords": [
        "code generation",
        "code parsing",
        "code quality",
        "code tools",
        "formatting",
        "language conversion",
        "language support",
        "language transpiler",
        "linting",
        "procedural design",
        "recursive parser",
        "syntax",
        "syntax tree",
        "universal syntax"
    ],
    "homepage": "https://github.com/douglasgreen/codesmith",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93.1",
        "phpstan/phpstan": "^2.1.38",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.3.5"

    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\CodeSmith\\": "src/",
            "DouglasGreen\\CodeSmith\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ],
        "test": "phpunit"
    }
}
