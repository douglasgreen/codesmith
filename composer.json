{
    "name": "douglasgreen/codesmith",
    "description": "A file to read a simple universal syntax and write other languages",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/codesmith",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "code generation",
        "code parsing",
        "code quality",
        "code tools",
        "formatting",
        "language conversion",
        "language support",
        "language transpiler",
        "linting",
        "procedural design",
        "recursive parser",
        "syntax",
        "syntax tree",
        "universal syntax"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\CodeSmith\\": "src/",
            "DouglasGreen\\CodeSmith\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "post-update-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "test": "phpunit"
    }
}
