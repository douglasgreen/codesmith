{
    "name": "douglasgreen/codesmith",
    "description": "A file to read a simple universal syntax and write other languages",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/codesmith",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "code generation",
        "code parsing",
        "code quality",
        "code tools",
        "formatting",
        "language conversion",
        "language support",
        "language transpiler",
        "linting",
        "procedural design",
        "recursive parser",
        "syntax",
        "syntax tree",
        "universal syntax"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\CodeSmith\\": "src/",
            "DouglasGreen\\CodeSmith\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/php-linter"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "php-linter",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit",
        "test": "phpunit"
    }
}
